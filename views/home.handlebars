

<h1>Welcome to BarterNow nCoV19</h1>

<div id="give">
    <fieldset>
    <legend>Give</legend>
        <div class='cards'>
            {{#each itemList}}
                <div class="card">
                    <img class="thumbnail" src={{{this.photo}}}>
                    {{this.displayName}}
                </div>
            {{/each}}
        </div>
    </fieldset>
</div>

<div id="need">
    <fieldset>
    <legend>Need</legend>
        <div class='cards'>
            {{#each itemList}}
                <div class="card">
                    <img class="thumbnail" src={{this.photo}}>
                    {{this.displayName}}
                    <input type="hidden" value={{this.name}}>
                </div>
            {{/each}}
        </div>
    </fieldset>
</div>






<h2>Enter what you need or what you have</h2>
    <form action="/action_page.php" method="get">
        <label for="uname">User Name</label>
        <input type="text" id="uname" name="uname" >
        <label for="zip">Zipcode</label>
        <input type="text" id="zip" name="zip">
        <label for="action">Action: </label>
        <select id="action" name="action">
            <option value="give">Give</option>
            <option value="barter">Barter</option>
            <option value="need">Need</option>
        </select>
        <input type="submit">
</form>
